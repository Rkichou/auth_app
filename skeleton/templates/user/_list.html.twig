<table class="min-w-full divide-y divide-gray-200 shadow rounded-lg overflow-hidden">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
    {% for user in users %}
        <tr id="user-{{ user.id }}">
            <td class="px-6 py-4 whitespace-nowrap">{{ user.id }}</td>
            <td class="px-6 py-4 whitespace-nowrap">{{ user.name }}</td>
            <td class="px-6 py-4 whitespace-nowrap">{{ user.email }}</td>
            <td class="px-6 py-4 whitespace-nowrap flex gap-2">
                <a href="{{ path('user_show', {'id': user.id}) }}" hx-get="{{ path('user_show', {'id': user.id}) }}" hx-target="#modal-body" hx-swap="innerHTML" class="inline-block px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition">Voir</a>
                <a href="{{ path('user_edit', {'id': user.id}) }}" hx-get="{{ path('user_edit', {'id': user.id}) }}" hx-target="#modal-body" hx-swap="innerHTML" class="inline-block px-3 py-1 bg-yellow-400 text-white rounded hover:bg-yellow-500 transition">Ã‰diter</a>
                <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display:inline" hx-delete="{{ path('user_delete', {'id': user.id}) }}" hx-target="#user-{{ user.id }}" hx-swap="outerHTML">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="4" class="px-6 py-4 text-center text-gray-400">Aucun utilisateur</td></tr>
    {% endfor %}
    </tbody>
</table>