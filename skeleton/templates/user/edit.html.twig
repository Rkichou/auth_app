{% extends 'base.html.twig' %}
{% block body %}
<h2 class="text-2xl font-bold mb-4">Éditer l'utilisateur</h2>
{{ form_start(form, {'attr': {'hx-post': path('user_edit', {'id': user.id}), 'hx-target': '#user-list', 'hx-swap': 'innerHTML', 'class': 'space-y-4'}}) }}
    <div class="mb-4">{{ form_row(form.name, {'attr': {'class': 'block w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}</div>
    <div class="mb-4">{{ form_row(form.email, {'attr': {'class': 'block w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}</div>
    <button type="submit" class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition">Mettre à jour</button>
{{ form_end(form) }}
{% endblock %}