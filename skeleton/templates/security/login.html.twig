{% extends 'base.html.twig' %}
{% block body %}
<div class="max-w-md mx-auto mt-10 p-8 bg-white rounded shadow">
    <h2 class="text-2xl font-bold mb-6">Connexion</h2>
    {% if error %}
        <div class="mb-4 p-2 bg-red-100 text-red-700 rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post">
        <div class="mb-4">
            <label for="inputEmail" class="block mb-1">Email</label>
            <input type="email" id="inputEmail" name="email" value="{{ last_username }}" required autofocus class="block w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        <div class="mb-4">
            <label for="inputPassword" class="block mb-1">Mot de passe</label>
            <input type="password" id="inputPassword" name="_password" required class="block w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
        </div>
        <button class="w-full px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Se connecter</button>
    </form>
    <div class="mt-4 text-center">
        <a href="{{ path('register') }}" class="text-blue-500 hover:underline">Cr√©er un compte</a>
    </div>
</div>
{% endblock %}